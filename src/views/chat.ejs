<!DOCTYPE html>
<html>
<head>
    <title>SocketsChat</title>
    <link rel='stylesheet' href="assets/css/chat.css">
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div class="container clearfix">
        <div class="people-list" id="people-list">
            <ul class="list">
                <li class="clearfix">
                    <img src="/assets/chat_avatar.jpg" alt="avatar" />
                    <div class="about">
                        <div class="name">Vincent Porter</div>
                    </div>
                </li>

                <li class="clearfix">
                    <img src="/assets/chat_avatar.jpg" alt="avatar" />
                    <div class="about">
                        <div class="name"></div>
                    </div>
                </li>
            </ul>
            <div id="user_id" style="text-align: center;"><%= user_id %></div>
        </div>

        <div class="chat">
            <div class="chat-header clearfix">
                <div class="chat-about">
                    <div id="online-info" class="chat-num-online"></div>
                    <!-- <div class="chat-num-messages">already 1 902 messages</div> -->
                    <div id="typing"></div>
                </div>
                <div class="people-list-online-images">
                    <a class="people-list-online-image" title="Name Name" style="background-image: url('/assets/def.jpg')"></a>
                    <a class="people-list-online-image" title="Name Name" style="background-image: url('/assets/def.jpg')"></a>
                    <a class="people-list-online-image" title="Name Name" style="background-image: url('/assets/def.jpg')"></a>
                </div>
            </div> <!-- end chat-header -->

            <div class="chat-history">
                <ul></ul>
            </div> <!-- end chat-history -->

            <div class="chat-message clearfix">
                <textarea name="message-to-send" id="message-to-send" placeholder="Type your message"
                    rows="3"></textarea>
                <button>Send</button>

            </div> <!-- end chat-message -->

        </div> <!-- end chat -->

    </div> <!-- end container -->

  <script src="assets/js/chat.js"></script>
</body>

</html>